@model dynamic

@if (Model.Type == "Payments")
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Tenant</th>
                    <th>Property</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>John Doe</td>
                    <td>Sunset Apartments</td>
                    <td class="text-end">$1,200</td>
                    <td>2023-10-01</td>
                    <td><span class="badge bg-success">Paid</span></td>
                </tr>
                <tr>
                    <td>Jane Smith</td>
                    <td>Ocean View</td>
                    <td class="text-end">$1,000</td>
                    <td>2023-10-02</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                </tr>
                <!-- Empty state -->
                <tr class="d-none">
                    <td colspan="5">@Html.Partial("_EmptyState")</td>
                </tr>
            </tbody>
        </table>
    </div>
}
