<header class="bg-white border-bottom shadow-sm py-2 px-4 d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <button class="btn btn-outline-secondary d-md-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
            <i class="bi bi-list"></i>
        </button>
        <h4 class="mb-0">@ViewBag.Title</h4>
    </div>
    <div class="d-flex align-items-center">
        <input type="text" class="form-control me-2" placeholder="Search..." style="width: 200px;">
        <button class="btn btn-outline-secondary me-2" type="button">
            <i class="bi bi-bell"></i>
        </button>
        @if (User.FindFirst("UserType")?.Value == "Landlord")
        {
            <div class="d-flex align-items-center">
                <div class="dropdown me-2">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                            id="newDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-plus"></i> New
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="newDropdown">
                        <li><a class="dropdown-item" asp-controller="Properties" asp-action="Create">Property</a></li>
                        <li><a class="dropdown-item" asp-controller="Units" asp-action="Create">Unit</a></li>
                        <li><a class="dropdown-item" asp-controller="Leases" asp-action="Create">Lease</a></li>
                        <li><a class="dropdown-item" asp-controller="Payments" asp-action="CreateInvoice">Invoice</a></li>
                        <li><a class="dropdown-item" asp-controller="Maintenance" asp-action="Create">Ticket</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                            id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> Profile
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                        <li>
                            <a class="dropdown-item" asp-controller="Users" asp-action="Profile">Profile</a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Lease" asp-action="Requests">Requests</a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Settings" asp-action="Index">Settings</a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Logout" asp-action="Index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>

        }
        else
        {
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                        id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle"></i> Profile
                </button>

                <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Users" asp-action="Profile">Profile</a>
                    </li>

                    <li><hr class="dropdown-divider"></li>

                    <li>
                        <a class="dropdown-item" asp-controller="Settings" asp-action="Index">Settings</a>
                    </li>

                    <li><hr class="dropdown-divider"></li>

                    <li>
                        <a class="dropdown-item" asp-controller="Logout" asp-action="Index">Logout</a>
                    </li>
                </ul>
            </div>

        }
    </div>
</header>
