@using property_lease_saas.Models.Entities
@model IEnumerable<MaintenanceRequest>

@{
    ViewData["Title"] = "Maintenance Requests";
}

<div class="container mt-4">

    <h2 class="fw-semibold mb-4">Maintenance Requests</h2>

    <!-- CREATE REQUEST -->
    <div class="card shadow-sm mb-5">
        <div class="card-header fw-semibold">Create New Request</div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input name="title" class="form-control" placeholder="Title" required />
                    </div>
                    <div class="col-md-5">
                        <input name="description" class="form-control" placeholder="Description" required />
                    </div>
                    <div class="col-md-3">
                        <select name="propertyId" class="form-select" required>
                            <option disabled selected>Select Property</option>
                            @foreach (var p in ViewBag.Properties)
                            {
                                <option value="@p.Id">@p.Title</option>
                            }
                        </select>
                    </div>
                </div>

                <button class="btn btn-primary mt-3">Create Request</button>
            </form>
        </div>
    </div>

    <!-- REQUEST LIST -->
    @foreach (var request in Model)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between">
                <strong>@request.Title</strong>
                <span class="badge bg-secondary">@request.Status</span>
            </div>

            <div class="card-body">
                <p>@request.Description</p>

                <small class="text-muted">
                    Created: @request.CreatedAt.ToString("dd MMM yyyy")
                </small>

                <!-- ACTIONS -->
                <div class="mt-3">
                    @if (request.Status == MaintenanceRequestStatus.Pending)
                    {
                        <form asp-action="Publish" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@request.Id" />
                            <button class="btn btn-success btn-sm">Publish</button>
                        </form>
                    }

                    @if (request.Status == MaintenanceRequestStatus.Completed)
                    {
                        <form asp-action="Verify" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@request.Id" />
                            <button class="btn btn-primary btn-sm">Verify</button>
                        </form>
                    }
                </div>

                <!-- APPLICATIONS -->
                @if (request.Applications.Any())
                {
                    <hr />
                    <h6 class="fw-semibold">Mechanic Applications</h6>

                    <table class="table table-sm table-bordered mt-2">
                        <thead class="table-light">
                            <tr>
                                <th>Bill</th>
                                <th>Notes</th>
                                <th>Applied</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var app in request.Applications)
                        {
                            <tr>
                                <td>@app.ProposedBill.ToString("C")</td>
                                <td>@app.Notes</td>
                                <td>@app.AppliedAt.ToString("dd MMM")</td>
                                <td>
                                    @if (app.IsAccepted)
                                    {
                                        <span class="badge bg-success">Accepted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (!app.IsAccepted && request.Status == MaintenanceRequestStatus.Published)
                                    {
                                        <form asp-action="Accept" method="post">
                                            <input type="hidden" name="applicationId" value="@app.Id" />
                                            <button class="btn btn-sm btn-primary">
                                                Accept
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    }
</div>