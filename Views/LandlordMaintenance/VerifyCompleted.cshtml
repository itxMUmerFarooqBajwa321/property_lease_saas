@model IEnumerable<property_lease_saas.Models.Entities.MaintenanceRequest>

@{
    ViewData["Title"] = "Verify Completed Requests";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-semibold">Completed Requests</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No completed maintenance requests to verify.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var request in Model)
            {
                @if (request.Status == property_lease_saas.Models.Entities.MaintenanceRequestStatus.Completed)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@request.Title</h5>
                                <p class="card-text">@request.Description</p>
                                <small class="text-muted mb-2">Completed: @request.CompletedAt?.ToString("dd MMM yyyy")</small>

                                @if (!string.IsNullOrEmpty(request.CompletionImagePath))
                                {
                                    <img src="@request.CompletionImagePath" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                                }

                                <form asp-action="Verify" method="post" class="mt-auto">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button class="btn btn-primary w-100">Verify Completion</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>
