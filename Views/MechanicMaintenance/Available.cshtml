@model IEnumerable<property_lease_saas.Models.Entities.MaintenanceRequest>

@{
    ViewData["Title"] = "Available Maintenance Jobs";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-semibold">Available Jobs</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No published maintenance jobs available.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var job in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@job.Title</h5>

                            <p class="card-text text-muted">
                                @job.Description
                            </p>

                            <small class="text-muted mb-2">
                                Posted on @job.CreatedAt.ToString("dd MMM yyyy")
                            </small>

                            <button class="btn btn-outline-primary mt-auto"
                                    data-bs-toggle="modal"
                                    data-bs-target="#applyModal-@job.Id">
                                Apply for Job
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Apply Modal -->
                <div class="modal fade" id="applyModal-@job.Id" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <form asp-action="Apply" method="post">
                                <div class="modal-header">
                                    <h5 class="modal-title">Apply for @job.Title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <div class="modal-body">
                                    <input type="hidden" name="requestId" value="@job.Id" />

                                    <div class="mb-3">
                                        <label class="form-label">Proposed Bill (Rs.)</label>
                                        <input type="number" name="bill" class="form-control" required />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Notes</label>
                                        <textarea name="notes" class="form-control" rows="3" required></textarea>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button class="btn btn-primary">Submit Application</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
